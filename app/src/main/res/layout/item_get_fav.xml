                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="@dimen/textsize_20" android:textStyle="bold" android:textColor="@color/colorBlack" android:id="@+id/txt_tutorName" android:layout_width="wrap_content" android:layout_height="@dimen/textsize_25" android:layout_marginLeft="@dimen/margin_10" android:text="Olivia Martin"/>

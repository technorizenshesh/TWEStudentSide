<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_200"
                android:src="@drawable/bg_home"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/margin_10"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imgLeftMenu1"
                                    android:layout_width="18dp"
                                    android:layout_height="24dp"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:layout_marginTop="12dp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/pin"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:id="@+id/et_tophomeSpinner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/margin_40"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:layout_toRightOf="@+id/imgLeftMenu1"
                                    android:backgroundTint="@color/colorWhite"
                                    android:inputType="text"
                                    android:text="Abu Dhabi, Dubai"
                                    android:padding="@dimen/padding_10"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/textsize_16" />

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="@dimen/margin_18"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:layout_toRightOf="@id/et_tophomeSpinner"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/drop_down_yellow"
                                    app:tint="@color/colorWhite" />

                                <View
                                    android:layout_width="208dp"
                                    android:layout_height="@dimen/margin_3"
                                    android:background="@color/colorWhite"
                                    android:layout_below="@id/et_tophomeSpinner"
                                    android:layout_marginLeft="@dimen/padding_5"
                                    android:layout_centerHorizontal="true"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/notification_home"
                        android:layout_width="@dimen/_45dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/padding_10"
                        android:layout_gravity="end"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bell"
                        app:tint="@color/colorWhite" />

                    <ImageView
                        android:layout_width="@dimen/margin_60"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/padding_10"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo_fill" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/relative_searchBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/margin_10"
                            android:layout_weight="1"
                            android:background="@drawable/search_background"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgLeftMenu"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/outline" />

                            <TextView
                                android:id="@+id/search_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_toRightOf="@+id/imgLeftMenu"
                                android:background="@color/colorWhite"
                                android:text="Search by subject"
                                android:inputType="text"
                                android:textColor="@color/colorGray" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/et_RightFilter"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/et_LeftMenu"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ascending_sort"/>


                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/et_RightFilter"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/yello_filter"/>
                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:padding="@dimen/margin_15"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/txt1_homeTab"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/color_yellowbg"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:text="Online"
                        android:textAlignment="center"
                        android:textColor="@color/color_txtBlue"
                        android:textSize="@dimen/textsize13"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />


                    <TextView
                        android:id="@+id/txt2_homeTab"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:background="@drawable/color_gray"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:text="Teachers Home"
                        android:textAlignment="center"
                        android:textColor="@color/color_txtBlue"
                        android:textSize="@dimen/textsize13"
                        tools:ignore="RtlCompat" />


                    <TextView
                        android:id="@+id/txt3_homeTab"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/color_gray"
                        android:clickable="true"
                        android:singleLine="true"
                        android:contextClickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:text="Students Home"
                        android:textAlignment="center"
                        android:textColor="@color/color_txtBlue"
                        android:textSize="@dimen/textsize13"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            >

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/margin_60"/>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</RelativeLayout>


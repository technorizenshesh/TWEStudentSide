<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/colorBackground" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <ProgressBar android:id="@+id/progressBar" android:background="@drawable/progresh_background" android:padding="5dp" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:indeterminate="true" android:layout_centerInParent="true" android:elevation="6dp" android:indeterminateTint="@color/colorPrimary" android:indeterminateTintMode="src_atop"/>
    <TextView android:textSize="@dimen/textsize_15" android:textStyle="bold" android:textColor="@color/colorBlack" android:id="@+id/txt_empty_tutor" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="No Favourite item" android:layout_centerInParent="true" android:layout_marginStart="5dp"/>
    <androidx.core.widget.NestedScrollView android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="@dimen/textsize_20" android:textStyle="bold" android:textColor="@color/colorBlack" android:layout_gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_15" android:layout_marginTop="@dimen/margin_25" android:text="Favourites"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/relative_searchBtn" android:background="@drawable/search_background" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_margin="@dimen/margin_10">
                    <ImageView android:id="@+id/imgLeftMenu" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="@dimen/margin_10" android:src="@drawable/outline" android:scaleType="fitCenter" android:adjustViewBounds="true"/>
                    <TextView android:textColor="@color/colorBlack" android:background="@color/colorWhite" android:layout_width="250dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_10" android:hint="Search by state or zip code" android:layout_toRightOf="@+id/imgLeftMenu" android:inputType="text"/>
                </RelativeLayout>
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="@dimen/margin_5" android:layout_marginRight="@dimen/margin_15" android:src="@drawable/filter" android:scaleType="fitCenter" android:adjustViewBounds="true" android:layout_toRightOf="@+id/et_LeftMenu"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_get_fav" android:visibility="visible" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>

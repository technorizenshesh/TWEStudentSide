<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:paddingLeft="15dp">

    <CheckBox
        android:id="@+id/remember_cb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:buttonTint="@android:color/white"
        android:checked="true"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:text="@string/cf_remember_username"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/continue_btn"
        app:layout_constraintEnd_toStartOf="@+id/continue_btn"
         />

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@android:color/black"
        android:text="@string/cf_continue"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/remember_cb"
        app:layout_constraintEnd_toEndOf="@+id/remember_cb" />

</androidx.constraintlayout.widget.ConstraintLayout>

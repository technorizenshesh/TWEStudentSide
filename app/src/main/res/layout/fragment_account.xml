<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/back"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="My Profile"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_25"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="$8426"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/margin_15"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textsize_18"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_booking_history_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="Booking Hstory Status"
                        android:textColor="@color/account_txtcolour"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="Dashboard"
                        android:textColor="@color/account_txtcolour"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_attendanceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/my_attendancetxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="My Attendance"
                        android:textColor="@color/account_txtcolour"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/my_attendanceimg"
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="Profile"
                        android:textColor="@color/account_txtcolour"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_paymentId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/my_txtpaymentId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="Payments"
                        android:textColor="@color/account_txtcolour"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/myClassesId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_myclassesId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="My Classes"
                        android:textColor="@color/account_txtcolour"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="Emergency Contact"
                        android:textColor="@color/account_txtcolour"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_walletId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_walletId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="My Wallet"
                        android:textColor="@color/account_txtcolour"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_yellow" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:text="Others"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textsize_18"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="Privacy Policy"
                        android:textColor="@color/account_txtcolour"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_terms_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="Terms &amp; Conditions"
                        android:textColor="@color/account_txtcolour"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="Contact Us"
                        android:textColor="@color/account_txtcolour"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_yellow" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:padding="@dimen/margin_10"
                    android:text="Logout"
                    android:textColor="@color/account_txtgreen"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragments.CategoryFragment3">


    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:background="@drawable/progresh_background"
        android:elevation="6dp"
        android:padding="5dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"/>

    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/LL_choose_sub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_chooser" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_15"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_15"
                        android:text="Today,\nI am going to LEARN"
                        android:textColor="@color/color_yellow"
                        android:textSize="@dimen/textsize_20"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/relative_searchBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="54dp"
                            android:layout_margin="@dimen/margin_10"
                            android:background="@android:drawable/screen_background_light_transparent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgLeftMenu"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/outline"
                                app:tint="@color/colorWhite" />

                            <EditText
                                android:id="@+id/search_home"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_toRightOf="@+id/imgLeftMenu"
                                android:background="@android:color/transparent"
                                android:hint="Something new"
                                android:inputType="text"
                                android:textColor="@color/colorGray"
                                android:textColorHint="@color/colorWhite"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_3"
                                android:layout_below="@id/search_home"
                                android:layout_marginTop="8dp"
                                android:background="@color/color_yellow" />

                        </RelativeLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text="Type to get Started Searching Over\n300 Subject"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />


                </LinearLayout>


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_15"
                android:gravity="center"
                android:text="Please Choose Your Subject"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_20" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:text="Gain skills, have fun, and build a better you."
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_18" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_choose_subject"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                />



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:visibility="visible"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/LL_choose_sub"
        android:layout_width="@dimen/margin_280"
        android:layout_height="@dimen/_45dp"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/edit_bgbutton"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/lesson_txt6Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>


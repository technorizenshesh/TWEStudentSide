<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:tag="layout/activity_add_address_home_0">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/progresh_background"
            android:elevation="6dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_atop"
            android:padding="5dp"
            android:visibility="gone" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_20"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/margin_20"
                    android:text="AddAddress"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_30"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/edit_background"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_addressType"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/edit_background"
                        android:gravity="center_vertical"
                        android:hint="Address Type"
                        android:inputType="text"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/edit_background"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_address"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/edit_background"
                        android:gravity="center_vertical"
                        android:hint="Address"
                        android:inputType="text"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/edit_background"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_postalCode"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/edit_background"
                        android:gravity="center_vertical"
                        android:hint="Postal Code"
                        android:inputType="text"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/edit_background"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_Country"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/edit_background"
                        android:gravity="center_vertical"
                        android:hint="Country"
                        android:inputType="text"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/edit_background"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_City"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/edit_background"
                        android:gravity="center_vertical"
                        android:hint="City"
                        android:inputType="text"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_saveAddress"
                    android:layout_width="@dimen/margin_280"
                    android:layout_height="@dimen/_45dp"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_50"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/edit_bgbutton"
                    android:gravity="center"
                    android:onClick="SignUPInit"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="SignUPInit"
                        android:text="Save"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>


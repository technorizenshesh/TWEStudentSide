<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".activity.PortFoliyoActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_15">


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:scaleType="fitCenter"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photos"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/margin_30"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_20"
                    android:textStyle="bold" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textsize_20"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="this is the demo screen of Google 360\nview when will use the Google 360 view\n Api. it will change and fully\nautomaticaly according the Google\n360 view"
                    android:textAlignment="center"
                    android:visibility="invisible"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(01/05)"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_20"
                    android:textStyle="bold" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_25"
                android:gravity="center_horizontal"
                android:orientation="vertical">





                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider1"
                    android:layout_width="@dimen/margin_300"
                    android:layout_height="@dimen/margin_250"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderStartAutoCycle="true"
                    app:sliderAnimationDuration="600"
                    android:background="@drawable/portfolio1"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderIndicatorAnimationDuration="100"
                    app:sliderIndicatorEnabled="true"
                    app:sliderIndicatorGravity="start|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="@color/red"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1" />




            </LinearLayout>



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/textsize_20"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        app:riv_corner_radius_top_left="10dip"
                        app:riv_corner_radius_top_right="10dip"
                        app:riv_mutate_background="true"
                        android:src="@drawable/portfolio1">
                    </com.makeramen.roundedimageview.RoundedImageView>


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/margin_15"
                        app:riv_corner_radius_top_left="10dip"
                        app:riv_corner_radius_top_right="10dip"
                        app:riv_mutate_background="true"
                        android:src="@drawable/portfolio2">
                    </com.makeramen.roundedimageview.RoundedImageView>


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/margin_15"
                        app:riv_corner_radius_top_left="10dip"
                        app:riv_corner_radius_top_right="10dip"
                        app:riv_mutate_background="true"
                        android:src="@drawable/portfoliyo3">
                    </com.makeramen.roundedimageview.RoundedImageView>


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/margin_15"
                        app:riv_corner_radius_top_left="10dip"
                        app:riv_corner_radius_top_right="10dip"
                        app:riv_mutate_background="true"
                        android:src="@drawable/math">
                    </com.makeramen.roundedimageview.RoundedImageView>


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/margin_15"
                        app:riv_corner_radius_top_left="10dip"
                        app:riv_corner_radius_top_right="10dip"
                        app:riv_mutate_background="true"
                        android:layout_marginRight="@dimen/margin_30"
                        android:src="@drawable/portfolio1">
                    </com.makeramen.roundedimageview.RoundedImageView>

                </LinearLayout>

            </HorizontalScrollView>






        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activity.FillterActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:scaleType="fitCenter"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fillter"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_25"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear All"
                    android:layout_gravity="center"
                    android:paddingRight="@dimen/margin_15"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_16" />

                <ImageView
                    android:layout_width="@dimen/margin_35"
                    android:layout_height="@dimen/margin_35"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:paddingRight="@dimen/margin_15"
                    android:scaleType="fitCenter"
                    android:src="@drawable/filter" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_searchBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/margin_10"
                    android:background="@drawable/search_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLeftMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:scaleType="fitCenter"
                        android:src="@drawable/outline" />

                    <EditText
                        android:id="@+id/et_LeftMenu"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:background="@color/colorWhite"
                        android:hint="Search by state or zip code"
                        android:layout_toRightOf="@+id/imgLeftMenu"
                        android:inputType="text"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>


            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teacher Attributes"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt1Tab"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Background Check"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/color_pink"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:focusable="true" />



                <TextView
                    android:id="@+id/txt3Tab"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Students Favourite"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:padding="@dimen/margin_3"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:background="@drawable/color_gray"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:focusable="true" />




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lesson Location"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_5"
                    android:paddingLeft="@dimen/margin_15"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold" />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:weightSum="3">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Online"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/color_pink"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:focusable="true" />


                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Teacher Studio"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:layout_gravity="center_horizontal"
                    android:contextClickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/color_gray"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:focusable="true" />


                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Student's Home"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:background="@drawable/color_gray"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:focusable="true" />




            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Availablity"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/margin_15"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="15dp"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:text="S"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/color_pink"
                        android:textColor="@color/colorWhite"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:focusable="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:text="M"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:clickable="true"
                        android:layout_gravity="center_horizontal"
                        android:contextClickable="true"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/color_gray"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:focusable="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:text="T"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:clickable="true"
                        android:layout_marginLeft="10dp"
                        android:contextClickable="true"
                        android:layout_weight="1"
                        android:background="@drawable/color_gray"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:focusable="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:text="W"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:clickable="true"
                        android:layout_marginLeft="10dp"
                        android:contextClickable="true"
                        android:layout_weight="1"
                        android:background="@drawable/color_gray"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:focusable="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:text="TH"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:clickable="true"
                        android:layout_marginLeft="10dp"
                        android:contextClickable="true"
                        android:layout_weight="1"
                        android:background="@drawable/color_gray"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:focusable="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:text="F"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:clickable="true"
                        android:layout_marginLeft="10dp"
                        android:contextClickable="true"
                        android:layout_weight="1"
                        android:background="@drawable/color_gray"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:focusable="true" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:text="S"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:clickable="true"
                        android:layout_marginLeft="10dp"
                        android:contextClickable="true"
                        android:layout_weight="1"
                        android:background="@drawable/color_gray"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:focusable="true" />




                </LinearLayout>





            </LinearLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold" />




                    <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:absoluteMaxValue="150"
                        app:absoluteMinValue="20"/>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher Gender"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/margin_15"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:weightSum="7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_40"
                    android:text="Male"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/color_pink"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:focusable="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_40"
                    android:text="Female"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:layout_gravity="center_horizontal"
                    android:contextClickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/color_gray"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:focusable="true" />

            </LinearLayout>







            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Age"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/margin_15"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Child (12&amp;under)"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/color_pink"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:focusable="true" />



                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Teen(13-17)"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:padding="@dimen/margin_3"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:background="@drawable/color_gray"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:focusable="true" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_5"
                android:weightSum="2">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Adult (18-65)"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/color_gray"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:focusable="true" />



                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Senior(65+)"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:padding="@dimen/margin_3"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:background="@drawable/color_gray"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:focusable="true" />




            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Range"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_15"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />


            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_30"
                android:layout_margin="@dimen/margin_20"
                android:thumbTint="@color/red"
                android:layout_gravity="center"
                android:theme="@style/Widget.AppCompat.SeekBar"/>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Range"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_15"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />



            <RatingBar
                android:id="@+id/MyRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:layout_gravity="center_vertical"
                android:rating="4"
                android:layout_marginLeft="@dimen/margin_15"
                android:progressTint="@color/color_yellow"
                android:numStars="5"
                android:stepSize="0.1" />















            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/bg_redbutton"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="Show"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    </LinearLayout>


</RelativeLayout>
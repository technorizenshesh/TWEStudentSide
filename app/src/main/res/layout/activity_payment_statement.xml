<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context=".activity.PaymentStatementActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/back"
                    android:visibility="visible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_weight="1"
                    android:text="Payments"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_25"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="$8426"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/margin_15"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    tools:ignore="RtlCompat" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_60"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Fee"
                        android:textStyle="bold"
                        android:paddingRight="@dimen/padding_5"
                        android:textSize="@dimen/textsize_15"
                        android:textColor="#5b5b5b"
                        android:gravity="end" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u20B910,000"
                        android:paddingRight="@dimen/padding_5"
                        android:textStyle="bold"
                        android:textSize="@dimen/textsize_25"
                        android:textColor="@color/account_txtcolour"/>







                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/padding_5"
                        android:textSize="@dimen/textsize_15"
                        android:textColor="#5b5b5b"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u20B93,000"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/padding_5"
                        android:textSize="@dimen/textsize_25"
                        android:textColor="@color/account_txtcolour"/>







                </LinearLayout>






            </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


        <LinearLayout
            android:layout_width="@dimen/margin_280"
            android:layout_height="@dimen/margin_150"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_shape_blue"
            android:backgroundTint="#E5E7E9"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ProgressBar
                    android:id= "@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width= "@dimen/margin_80"
                    android:layout_height= "@dimen/margin_80"
                    android:layout_centerInParent= "true"
                    android:background= "@drawable/circular_shape"
                    android:indeterminate= "false"
                    android:max= "100"
                    android:progress= "25"
                    android:progressTint="@color/edit_darkBlue"
                    android:progressDrawable= "@drawable/circular_progress_bar" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:text="25%"
                    android:textStyle="bold"
                    android:textColor="@color/edit_darkBlue"
                    android:textSize="@dimen/textsize_20" />
            </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Digicult"
                        android:textStyle="bold"
                        android:paddingRight="@dimen/padding_5"
                        android:textSize="@dimen/textsize_20"
                        android:textColor="@color/account_txtcolour"
                        android:gravity="end" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fees: \u20B91,000"
                        android:paddingRight="@dimen/padding_5"
                        android:textStyle="bold"
                        android:textSize="@dimen/textsize_15"
                        android:textColor="@color/colorGray"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject-1"
                        android:paddingRight="@dimen/padding_5"
                        android:textStyle="bold"
                        android:textSize="@dimen/textsize_15"
                        android:textColor="@color/colorGray"/>




                </LinearLayout>

            </LinearLayout>
        </LinearLayout>





            <LinearLayout
                android:layout_width="@dimen/margin_280"
                android:layout_height="@dimen/margin_150"
                android:layout_marginTop="@dimen/margin_120"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_shapeyellowbg"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id= "@+id/progressBar2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width= "@dimen/margin_80"
                        android:layout_height= "@dimen/margin_80"
                        android:layout_centerInParent= "true"
                        android:background= "@drawable/circular_shape"
                        android:backgroundTint="@color/colorWhite"
                        android:indeterminate= "false"
                        android:max= "100"
                        android:progress= "25"
                        android:progressTint="@color/edit_darkBlue"
                        android:progressDrawable= "@drawable/circular_progress_bar" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:text="25%"
                        android:textStyle="bold"
                        android:textColor="@color/edit_darkBlue"
                        android:textSize="@dimen/textsize_20" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olivia Parker"
                        android:textStyle="bold"
                        android:onClick="OliviaParkerInit"
                        android:paddingRight="@dimen/padding_5"
                        android:textSize="@dimen/textsize_20"
                        android:textColor="@color/edit_darkBlue" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fees: \u20B915,00"
                        android:paddingRight="@dimen/padding_5"
                        android:textStyle="bold"
                        android:textSize="@dimen/textsize_15"
                        android:textColor="@color/edit_darkBlue"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject-2"
                        android:paddingRight="@dimen/padding_5"
                        android:textStyle="bold"
                        android:textSize="@dimen/textsize_15"
                        android:textColor="@color/edit_darkBlue"/>




                </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="@dimen/margin_280"
                android:layout_height="@dimen/margin_150"
                android:layout_marginTop="@dimen/margin_250"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_shape_blue"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id= "@+id/progressBar3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width= "@dimen/margin_80"
                            android:layout_height= "@dimen/margin_80"
                            android:layout_centerInParent= "true"
                            android:background= "@drawable/circular_shape"
                            android:indeterminate= "false"
                            android:backgroundTint="@color/colorGray"
                            android:max= "100"
                            android:progress= "75"
                            android:progressTint="@color/colorWhite"
                            android:progressDrawable= "@drawable/circular_progress_bar" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_marginLeft="8dp"
                            android:text="75%"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/textsize_20" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:orientation="vertical">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Olivia Parker"
                            android:textStyle="bold"
                            android:paddingRight="@dimen/padding_5"
                            android:textSize="@dimen/textsize_20"
                            android:textColor="@color/colorWhite" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fees: \u20B92,000"
                            android:paddingRight="@dimen/padding_5"
                            android:textStyle="bold"
                            android:textSize="@dimen/textsize_15"
                            android:textColor="@color/colorWhite"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject-3"
                            android:paddingRight="@dimen/padding_5"
                            android:textStyle="bold"
                            android:textSize="@dimen/textsize_15"
                            android:textColor="@color/colorWhite"/>




                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            </RelativeLayout>









        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/card_item1" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/colorGray" android:gravity="center_horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="Today" android:textAlignment="center"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/LL_left_layOut" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colorBlack" android:gravity="center_horizontal" android:id="@+id/txt_left" android:background="@drawable/g_chat1" android:paddingLeft="@dimen/margin_10" android:paddingTop="@dimen/margin_8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hi, Leyla parker" android:textAlignment="center"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/colorGray" android:gravity="center_horizontal" android:id="@+id/txt_status_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_100" android:text="5 min ago" android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout android:layout_gravity="end" android:orientation="vertical" android:id="@+id/LL_right_layOut" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_gravity="end" android:background="@drawable/g_chat2" android:paddingLeft="@dimen/margin_20" android:paddingRight="@dimen/margin_80" android:layout_width="wrap_content" android:layout_height="wrap_content" android:backgroundTint="@color/color_txtBlue">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/txt_Right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_5" android:text="Harshit"/>
            </RelativeLayout>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/colorGray" android:gravity="center_horizontal" android:layout_gravity="end" android:id="@+id/txt_status_Right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_50" android:text="1 min ago" android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

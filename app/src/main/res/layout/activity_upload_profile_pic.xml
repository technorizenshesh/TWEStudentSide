<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/margin_20">
            <TextView android:textSize="@dimen/margin_25" android:textStyle="bold" android:textColor="@color/colorBlack" android:layout_gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_20" android:layout_marginTop="@dimen/_14dp" android:text="Fill Details"/>
            <ImageView android:visibility="gone" android:layout_width="@dimen/margin_350" android:layout_height="@dimen/margin_150" android:src="@drawable/profii"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/LL_user_profile" android:background="@drawable/red_outline" android:layout_width="match_parent" android:layout_height="@dimen/margin_150" android:layout_marginLeft="@dimen/margin_25" android:layout_marginRight="@dimen/margin_25">
                <ImageView android:layout_gravity="center" android:id="@+id/img_userProfile" android:layout_width="@dimen/margin_40" android:layout_height="@dimen/margin_40" android:src="@drawable/redcamera"/>
                <TextView android:textSize="@dimen/textsize_20" android:textStyle="bold" android:textColor="@color/red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Upload Your Profile Pic"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/LL_calender" android:background="@drawable/edit_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_20" android:layout_marginTop="@dimen/margin_25" android:layout_marginRight="@dimen/margin_20">
                <LinearLayout android:orientation="horizontal" android:background="@drawable/edit_background" android:padding="@dimen/textsize_15" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_gravity="center" android:layout_width="@dimen/margin_25" android:layout_height="@dimen/margin_25" android:src="@drawable/calendar"/>
                    <TextView android:textSize="@dimen/textsize13" android:textStyle="bold" android:textColor="@color/colorBlack" android:layout_gravity="center" android:id="@+id/txt_dob" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_15" android:layout_marginRight="@dimen/margin_15" android:text="DOB" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/textsize_12" android:textStyle="bold" android:textColor="@color/colorGray" android:gravity="end" android:layout_gravity="center" android:id="@+id/txt_age" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_15" android:layout_marginRight="@dimen/margin_15" android:text="0 Years" android:layout_weight="1"/>
                    <ImageView android:layout_gravity="center" android:visibility="invisible" android:layout_width="@dimen/margin_15" android:layout_height="@dimen/textsize_15" android:src="@drawable/drop_down"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:background="@drawable/edit_background" android:layout_width="match_parent" android:layout_height="@dimen/margin_50" android:layout_marginLeft="@dimen/margin_20" android:layout_marginTop="@dimen/margin_25" android:layout_marginRight="@dimen/margin_20">
                <RelativeLayout android:orientation="horizontal" android:background="@drawable/edit_background" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
                    <RelativeLayout android:id="@+id/RR_img" android:layout_width="@dimen/margin_50" android:layout_height="match_parent">
                        <ImageView android:layout_gravity="center" android:layout_width="@dimen/margin_25" android:layout_height="@dimen/margin_25" android:layout_marginLeft="@dimen/margin_10" android:src="@drawable/male" android:layout_alignParentLeft="true" android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <Spinner android:id="@+id/spinnergender" android:background="@android:color/transparent" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/RR_arrow" android:layout_toRightOf="@+id/RR_img" android:backgroundTint="@color/colorBlack" style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>
                    <TextView android:textSize="@dimen/textsize13" android:textStyle="bold" android:textColor="@color/colorBlack" android:layout_gravity="center" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_15" android:layout_marginRight="@dimen/margin_15" android:text="Gender" android:layout_weight="1"/>
                    <RelativeLayout android:id="@+id/RR_arrow" android:layout_width="@dimen/margin_50" android:layout_height="match_parent" android:layout_alignParentRight="true">
                        <ImageView android:layout_gravity="right" android:layout_width="@dimen/margin_15" android:layout_height="@dimen/textsize_15" android:layout_marginRight="@dimen/margin_10" android:src="@drawable/drop_down" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:background="@drawable/edit_background" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_20" android:layout_marginTop="@dimen/margin_25" android:layout_marginRight="@dimen/margin_20">
                <LinearLayout android:orientation="horizontal" android:background="@drawable/edit_background" android:padding="@dimen/textsize_15" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_gravity="center" android:layout_width="@dimen/margin_25" android:layout_height="@dimen/margin_25" android:src="@drawable/male"/>
                    <TextView android:textSize="@dimen/textsize_18" android:textColor="@color/colorBlack" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_15" android:layout_marginRight="@dimen/margin_15" android:text="Gender" android:layout_weight="1"/>
                    <ImageView android:layout_gravity="center" android:layout_width="@dimen/margin_15" android:layout_height="@dimen/textsize_15" android:src="@drawable/drop_down"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:background="@drawable/edit_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_20" android:layout_marginTop="@dimen/margin_25" android:layout_marginRight="@dimen/margin_20">
                <LinearLayout android:orientation="horizontal" android:background="@drawable/edit_background" android:padding="@dimen/textsize_15" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_gravity="center" android:visibility="gone" android:layout_width="@dimen/margin_25" android:layout_height="@dimen/margin_25" android:src="@drawable/male"/>
                    <EditText android:textSize="@dimen/textsize_18" android:textColor="@color/colorBlack" android:layout_gravity="center" android:id="@+id/edt_about" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="About Me" android:layout_weight="1"/>
                    <ImageView android:layout_gravity="center" android:visibility="gone" android:layout_width="@dimen/margin_15" android:layout_height="@dimen/textsize_15" android:src="@drawable/drop_down"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/edit_bgbutton" android:layout_width="@dimen/margin_280" android:layout_height="@dimen/_45dp" android:layout_marginLeft="@dimen/margin_20" android:layout_marginTop="@dimen/margin_20" android:layout_marginRight="@dimen/margin_20" android:onClick="signupProfilePic">
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorWhite" android:id="@+id/tv_login" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Submit" android:onClick="signupProfilePic" android:textAllCaps="true"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout android:gravity="center_vertical" android:orientation="vertical" android:background="@drawable/search_background" android:layout_width="130dp" android:layout_height="55dp" android:layout_marginLeft="@dimen/margin_60" android:layout_marginTop="@dimen/margin_15" android:layout_weight="1">
                                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                                    <EditText android:textSize="@dimen/textsize_16" android:textStyle="bold" android:textColor="@color/colorBlack" android:background="@color/colorWhite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_25" android:text="06" android:layout_toRightOf="@+id/imgLeftMenu" android:inputType="text"/>
                                    <View android:background="@color/colorGray" android:layout_width="@dimen/margin_2" android:layout_height="@dimen/margin_25" android:layout_marginLeft="@dimen/margin_20"/>
                                    <EditText android:textSize="@dimen/textsize_16" android:textStyle="bold" android:textColor="@color/colorBlack" android:background="@color/colorWhite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_20" android:text="22" android:layout_toRightOf="@+id/imgLeftMenu" android:inputType="text"/>

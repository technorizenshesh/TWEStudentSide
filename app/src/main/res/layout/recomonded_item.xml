<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/myPropertyId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/margin_200"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="@dimen/padding_5"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="@dimen/padding_5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/margin_90"
                        android:layout_height="@dimen/margin_90"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@drawable/home_banner3"
                        />

                    <ImageView
                        android:id="@+id/status"
                        android:layout_width="@dimen/margin_60"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_80"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/available" />


                    <ImageView
                        android:id="@+id/img_heart"
                        android:layout_width="@dimen/margin_25"
                        android:layout_height="@dimen/margin_25"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/padding_5"
                        android:src="@drawable/heart"
                        android:layout_alignParentRight="true" />


                </RelativeLayout>

                <!--android:src="@drawable/bahut_heart"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_25"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Olivia"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_20"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/padding_5"
                        android:orientation="horizontal">

                        <RatingBar
                            android:id="@+id/MyRating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/padding_15"
                            android:isIndicator="true"
                            android:numStars="1"
                            android:progressTint="@color/color_yellow"
                            android:rating="1"
                            android:stepSize="0.1" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_20"
                            android:text="5.0(44)"
                            android:layout_marginLeft="@dimen/padding_5"
                            android:textColor="@color/colorBlack" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/txt_Dob"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_25"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="25 years"
                            android:textColor="@color/edit_darkBlue"
                            android:textSize="@dimen/textsize14" />

                        <ImageView
                            android:layout_width="@dimen/padding_8"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/padding_5"
                            android:src="@drawable/bg_point_circle" />


                        <TextView
                            android:id="@+id/txt_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_25"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:gravity="center"
                            android:text="Female"
                            android:textColor="@color/edit_darkBlue"
                            android:textSize="@dimen/textsize14" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_25"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Indore, MP"
                            android:textColor="@color/edit_darkBlue"
                            android:textSize="@dimen/textsize14" />

                        <ImageView
                            android:layout_width="@dimen/padding_8"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:src="@drawable/bg_point_circle" />


                        <TextView
                            android:id="@+id/txt_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_25"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:singleLine="true"
                            android:text="2Km away"
                            android:textColor="@color/edit_darkBlue"
                            android:textSize="@dimen/textsize14" />


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/textsize_25"
                        android:text="Full Course"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/txt_perHr_price"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/textsize_25"
                        android:text="$700"
                        android:textColor="@color/color_txtBlue"
                        android:textSize="@dimen/textsize_20"
                        android:textStyle="bold" />




                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10"
                        android:src="@drawable/background_check"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_40"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_15"
                            android:background="@drawable/color_pink"
                            android:gravity="center"
                            android:backgroundTint="@color/color_yellow"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:layout_marginRight="@dimen/margin_15"
                                android:layout_weight="1"
                                android:text="View More"
                                android:textColor="@color/edit_darkBlue"
                                android:textSize="@dimen/textsize_18"
                                android:textStyle="bold" />


                        </LinearLayout>





                    </LinearLayout>



                </LinearLayout>










            </LinearLayout>




            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendarViewW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:eventsEnabled="true"
            app:type="classic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_12"
                android:layout_height="@dimen/margin_12"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_5"
                android:src="@drawable/sample_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_25"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center_vertical"
                android:text="Absent"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textsize13" />

            <ImageView
                android:layout_width="@dimen/margin_12"
                android:layout_height="@dimen/margin_12"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_25"
                android:src="@drawable/sample_greencircle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_25"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center_vertical"
                android:text="Present"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textsize13" />

            <ImageView
                android:layout_width="@dimen/margin_12"
                android:layout_height="@dimen/margin_12"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_25"
                android:src="@drawable/sample_graycircle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_25"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center_vertical"
                android:text="Holiday"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textsize13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_20"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/textsize_15">

                            <ImageView
                                android:layout_width="@dimen/margin_60"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/available" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:layout_width="@dimen/margin_90"
                                        android:layout_height="@dimen/margin_90"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/home_banner3" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/textsize_15">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Name of teacher"
                                            android:textColor="@color/colorGray"
                                            android:textSize="@dimen/_14dp"
                                            android:textStyle="bold" />

                                        <com.google.android.material.switchmaterial.SwitchMaterial
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:buttonTint="@color/colorGreen"
                                            android:textColor="@color/color_txtBlue"
                                            android:textSize="@dimen/_14dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Olivia Parker"
                                            android:textColor="@color/color_txtBlue"
                                            android:textSize="@dimen/textsize_16"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="â‚¹750/-"
                                            android:textColor="@color/color_txtBlue"
                                            android:textSize="@dimen/_14dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/margin_25"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="24 years"
                                            android:textColor="@color/colorGray"
                                            android:textSize="@dimen/textsize13" />

                                        <ImageView
                                            android:layout_width="@dimen/padding_8"
                                            android:layout_height="8dp"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="@dimen/padding_5"
                                            android:src="@drawable/bg_point_circle" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/margin_25"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="@dimen/margin_10"
                                            android:gravity="center"
                                            android:text="2Km away"
                                            android:textColor="@color/edit_darkBlue"
                                            android:textSize="@dimen/textsize13" />

                                        <ImageView
                                            android:layout_width="@dimen/padding_8"
                                            android:layout_height="8dp"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="@dimen/padding_5"
                                            android:src="@drawable/bg_point_circle" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/margin_25"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="@dimen/margin_10"
                                            android:gravity="center"
                                            android:text="Female"
                                            android:textColor="@color/edit_darkBlue"
                                            android:textSize="@dimen/textsize13" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <RatingBar
                                            style="?android:attr/ratingBarStyleSmall"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:isIndicator="true"
                                            android:numStars="5"
                                            android:progressTint="@color/color_yellow"
                                            android:rating="4"
                                            android:stepSize="0.1" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start"
                                            android:layout_weight="1"
                                            android:gravity="start"
                                            android:text="5.0(44)"
                                            android:textAlignment="textStart"
                                            android:textColor="@color/colorBlack" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/margin_20"
                                            android:gravity="start"
                                            android:text="Per Hour"
                                            android:textAlignment="textStart"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_20"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Tution Time"
                                        android:textColor="@color/colorGray"
                                        android:textSize="@dimen/_14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:paddingLeft="@dimen/margin_10"
                                        android:text="10:20 Am"
                                        android:textAlignment="center"
                                        android:textColor="@color/color_txtBlue"
                                        android:textSize="@dimen/_14dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Teacher Location"
                                        android:textColor="@color/colorGray"
                                        android:textSize="@dimen/_14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:paddingLeft="@dimen/margin_10"
                                        android:text="Indore, India"
                                        android:textAlignment="center"
                                        android:textColor="@color/color_txtBlue"
                                        android:textSize="@dimen/_14dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/margin_25"
                                        android:layout_height="@dimen/margin_25"
                                        android:layout_marginTop="@dimen/margin_15"
                                        android:layout_marginRight="@dimen/margin_15"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/call1" />

                                    <ImageView
                                        android:layout_width="@dimen/margin_25"
                                        android:layout_height="@dimen/margin_25"
                                        android:layout_marginTop="@dimen/margin_15"
                                        android:layout_marginRight="@dimen/margin_15"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/msg" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/textsize_15"
                    android:background="@drawable/color_pink"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check In"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

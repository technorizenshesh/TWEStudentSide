<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activity.PaymentMethodActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_50"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_250"
                    android:background="@color/color_txtBlue"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:adjustViewBounds="true"
                        android:onClick="back_payment"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:scaleType="fitCenter"
                        android:src="@drawable/white_back" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/textsize_20"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="$8426"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="@dimen/margin_25"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/textsize_25"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        tools:ignore="RtlCompat" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_50">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="  Payment Method"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="@dimen/margin_25"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/textsize_25"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="   Current Method"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="@dimen/margin_25"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/textsize_18"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="340dp"
                        android:layout_height="65dp"
                        android:background="@drawable/pay_bg"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_215"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/et_LeftMenu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:background="@color/colorWhite"
                            android:padding="@dimen/margin_10"
                            android:text="Credit/Debit Card"
                            android:textSize="@dimen/textsize_20"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/imgLeftMenu"
                            android:inputType="text"
                            android:textColor="@color/colorBlack" />




                    </RelativeLayout>

                </LinearLayout>




            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Please choose desired card type. We offer suitable cards."
                android:textColor="@color/colorGray"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_20"
                android:textAlignment="textStart"
                android:textSize="@dimen/textsize_16"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/margin_5"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="65dp"
                    android:background="@drawable/search_background"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:paddingLeft="@dimen/padding_15"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/margin_50"
                                android:layout_height="@dimen/margin_50"
                                android:src="@drawable/cash"
                                android:backgroundTint="@color/color_txtBlue"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/padding_15"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cash Payment"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/textsize14"
                                    android:textColor="@color/colorBlack"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Default Method"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/textsize13"
                                    android:textColor="@color/colorGray"/>





                            </LinearLayout>



                            <ImageView
                                android:layout_width="@dimen/margin_30"
                                android:layout_height="@dimen/margin_30"
                                android:src="@drawable/checked"
                                android:layout_marginRight="@dimen/padding_15"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/color_txtBlue"/>






                        </LinearLayout>





                    </LinearLayout>






                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="65dp"
                    android:background="@drawable/search_background"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:paddingLeft="@dimen/margin_20"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/margin_40"
                                android:layout_height="@dimen/margin_40"
                                android:src="@drawable/bank"
                                android:backgroundTint="@color/color_txtBlue"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/padding_15"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cash Payment"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/textsize14"
                                    android:textColor="@color/colorBlack"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Default Method"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/textsize13"
                                    android:textColor="@color/colorGray"/>





                            </LinearLayout>



                            <ImageView
                                android:layout_width="@dimen/margin_30"
                                android:layout_height="@dimen/margin_30"
                                android:src="@drawable/checked"
                                android:visibility="invisible"
                                android:layout_marginRight="@dimen/padding_15"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/color_txtBlue"/>






                        </LinearLayout>





                    </LinearLayout>






                </RelativeLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="@dimen/margin_280"
                android:layout_height="@dimen/_45dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:onClick="paymentMethodBtn"
                android:layout_marginTop="@dimen/margin_25"
                android:background="@drawable/payment_btn_bg"
                android:orientation="vertical">




                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="Add Payment Method"
                    android:textAllCaps="false"
                    android:textColor="@color/color_txtBlue"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />


            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Debit card are accepted at same location and for same category. "
                android:textColor="@color/colorGray"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_20"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="@dimen/textsize13"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat" />




            <ImageView
                android:layout_width="320dp"
                android:layout_height="@dimen/margin_100"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/margin_20"
                android:src="@drawable/payment_group"/>










        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</RelativeLayout>